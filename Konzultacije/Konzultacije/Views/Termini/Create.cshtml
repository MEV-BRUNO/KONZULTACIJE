@model Konzultacije.Models.Termini

@{
    ViewBag.Title = "Unos novog termina";
}

<br/>
<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Profesor.Ime_I_Prezime, "Ime i prezime", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Profesor.Ime_I_Prezime, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Profesor, @readonly =true}})
                @Html.ValidationMessageFor(model => model.Profesor.Ime_I_Prezime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KolegijID, "Naziv kolegija", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KolegijID",new SelectList(ViewBag.MojaLista, "KolegijID", "Naziv"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KolegijID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Dan_Tjedan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dan_Tjedan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dan_Tjedan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vrijeme_Od, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vrijeme_Od, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vrijeme_Od, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vrijeme_Do, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vrijeme_Do, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vrijeme_Do, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Stvori konzultaciju" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

	<div class="col-md-6">
		<div>
			@Html.ActionLink("Natrag na listu »", "Index", "Termini", new { id = (int)Session["Profesor"]}, new { @class = "btn btn-info" })
		</div>
		<br />
		<div>
			@Html.ActionLink("Natrag na početnu »", "Index", "Home", null, new { @class = "btn btn-info" })
		</div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
