<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar bg-dark">
        <div class="container">   
			
				<div class="col-sm-11">
					<p>@Html.ActionLink("Konzultacije", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-light" })</p>
				</div>
				<div class="col-sm-1">
					<p>@Html.ActionLink("Log out", "LogOut", "Account","Home", new { @class= "navbar-brand text-light"} )</p>
					<p></p>
			</div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
 
        <footer>
            <p>&copy; 2018 - Konzultacije (PAUP)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
