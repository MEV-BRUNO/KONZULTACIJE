@model Konzultacije.Models.Kolegij_Profesor

@{
    ViewBag.Title = "Odabir kolegija";
}
<br />
<h3>@ViewBag.Title</h3>
<br />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
 
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Profesor.Ime_I_Prezime, "Ime i prezime", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Profesor.Ime_I_Prezime, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Profesor}})
				@Html.ValidationMessageFor(model => model.ProfesorID, "", new { @class = "text-danger" })
			</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KolegijID, "Naziv Kolegija", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KolegijID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KolegijID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Odaberi" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div>
	@Html.ActionLink("Natrag na početnu »", "Index", "Home", null, new { @class = "btn btn-info" })
</div>
