@using Konzultacije.Models
@model Konzultacije.Models.RegisterViewModel
@{
	ViewBag.Title = "Konzultacije";
}

<h2>@ViewBag.Title</h2>
&emsp;&emsp;

<div>
	@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.AntiForgeryToken()
		<div class="bg-primary rounded form-group text-white" style="height: 45px; padding:10px; width: 25%;"><p style="text-align:center;">Ispunite podatke za registraciju</p> </div>

		@Html.ValidationSummary()
		<div class="form-group">
			@Html.TextBoxFor(Model => Model.Ime, new { @Value = "Ime", @class = "form-control", @onclick = "this.value =''" })
		</div>
		<div class="form-group">
			@Html.TextBoxFor(Model => Model.Prezime, new { @Value = "Prezime", @class = "form-control", @onclick = "this.value =''" })
		</div>
		<div class="form-group">
			@Html.TextBoxFor(Model => Model.UserName, new { @Value = "Korisničko Ime", @class = "form-control", @onclick = "this.value =''" })
		</div>
		<div class="form-group">
			@Html.TextBoxFor(Model => Model.Email, new { @Value = "Vašu E-mail adresu", @class = "form-control", @onclick = "this.value =''" })
		</div>
		<div class="form-group">
			@Html.PasswordFor(Model => Model.Password, new { @Value = "Lozinka", @class = "form-control", @onclick = "this.value =''" })

		</div>
		<div class="form-group">
			@Html.PasswordFor(Model => Model.ConfirmPassword, new { @Value = "Ponovi lozinku", @class = "form-control", @onclick = "this.value =''" })
		</div>


		<div class="form-group">
			<div>
				<input type="submit" value="Registracija" class="btn btn-success" />
			</div>
		</div>

		<div class="moje">
			<div>
				@Html.ActionLink("Prijava", "Login", "Account", new { @Style = "color: black;", @class = "mojilink;" })
				&emsp;
				@Html.ActionLink("Zaboravio lozinku", "ForgottenPassword", "Account", new { @Style = "color: black;", @class = "mojilink;" })
				&emsp;
				@Html.ActionLink("Registracija", "Register", "Account", new { @Style = "color: black;", @class = "mojilink;" })
			</div>
		</div>
	}

	</div>


	@section Scripts {
		@Scripts.Render("~/boundles/jqueryval")
	}
