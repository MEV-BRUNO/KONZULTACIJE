@using Konzultacije.Models
@model Konzultacije.Models.LoginViewModel


@{
	ViewBag.Title = "Konzultacije";
}

<h2>@ViewBag.Title</h2>
&emsp;&emsp;

<div>
	<section id="loginForm">
		@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
		{
			@Html.AntiForgeryToken()

			<div class="bg-primary rounded form-group text-white" style="height: 45px; padding:10px; width: 25%;"><p style="text-align:center;">Vaše korisničko ime i lozinka</p> </div>

			@Html.ValidationSummary(true)
			<div class="form-group">
				@Html.TextBoxFor(Model => Model.UserName, new { Value = "Korisničko ime", @class = "form-control", @onclick = "this.value =''" })
			</div>
			<div class="form-group">
				@Html.PasswordFor(Model => Model.Password, new { Value = "Lozinka", @class = "form-control", @onclick = "this.value =''" })
			</div>


			<div class="form-group">
				<div>
					<input type="submit" value="Prijava" class="btn btn-danger" />
				</div>
			</div>

			<div>
				@Html.ActionLink("Prijava", "Login", "Account", new { @Style = "color: black;", @class = "mojilink;" })
				&emsp;

				@Html.ActionLink("Zaboravio lozinku", "ForgottenPassword", "Account", new { @Style = "color: black;", @class = "mojilink;" })
				&emsp;

				@Html.ActionLink("Registracija", "Register", "Account", new { @Style = "color: black;", @class = "mojilink;" })
			</div>

		}
	</section>
</div>