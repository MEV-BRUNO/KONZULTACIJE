@using Konzultacije.Models
@model Konzultacije.Models.ForgottenPasswordViewModel
@{
	ViewBag.Title = "Konzultacije";
}

<br />
&emsp;&emsp;

<div>
	@using (Html.BeginForm("ForgottenPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.AntiForgeryToken()
		<div class="bg-primary rounded form-group text-white" style="height: 60px; padding:15px; max-width:280px; min-width:235px;">
			<p style="text-align:center;">Upiši vašu valjanu e-mail adresu</p> </div>

		@Html.ValidationSummary()
		<div class="form-group">
			@Html.TextBoxFor(Model => Model.Email, new { @Value = "Vaša E-mail adresa", @class = "form-control", @onclick = "this.value =''" })
		</div>

		<div class="form-group">
			<div>
				<input type="submit" value="Obnova lozinke" class="btn btn-success" />
			</div>
		</div>

		<div>
			@Html.ActionLink("Prijava", "Login", "Account", new { @Style = "color: black;", @class = "mojilink;" })
			&emsp;
			@Html.ActionLink("Zaboravio lozinku", "ForgottenPassword", "Account", new { @Style = "color: black;", @class = "mojilink;" })
			&emsp;
			@Html.ActionLink("Registracija", "Register", "Account", new { @Style = "color: black;", @class = "mojilink;" })
		</div>

	}

</div>